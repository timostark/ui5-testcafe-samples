{
    "browsers": "chrome --start-maximized",
    "selectorTimeout": 60000,
    "pageLoadTimeout": 20000,
    "assertionTimeout": 20000,
    "disableMultipleWindows": true,
    "stopOnFirstFail": false,
    "skipJsErrors": true,
    "screenshots": {
        "path": "artifacts/screenshots"
    },
    "reporter": [
        {
            "name": "spec"
        },
        {
            "name": "xunit",
            "output": "reports/report.xml"
        }
    ]
}